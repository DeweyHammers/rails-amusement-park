<%= form_for @attraction do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label "Height Requirement (in inches)" %>
    <%= f.text_field :min_height %>
  </p>
  <p>
    <%= f.label "How fun is it? (1-5 scale)" %>
    <%= f.text_field :happiness_rating %>
  </p>
  <p>
    <%= f.label "How nausea-inducing is it? (1-5 scale)" %>
    <%= f.text_field :nausea_rating %>
  </p>
  <p>
    <%= f.label "How many tickets does it cost?" %>
    <%= f.text_field :tickets %>
  </p>
  <%= f.hidden_field :admin_id, value: current_user.id %>
  <p>
    <%= f.submit %>
  </p>
<% end %>