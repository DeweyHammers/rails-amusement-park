<% @attractions.all.each do |attraction| %>
  <h1><%= attraction.name %></h1>
  <% if current_user.admin %>
    <%= link_to "Show #{attraction.name}", attraction %>
  <% else %>
    <%= link_to "Go on #{attraction.name}", attraction %>
  <% end %>
<% end %><br>

<% if current_user.admin %>
  <%= link_to "New Attraction", new_attraction_path %>
<% end %>